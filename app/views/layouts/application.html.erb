<!DOCTYPE html>
<html>
  <head>
    <title>FinalRailsProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= yield %>
    <br>
    <br>
    <br>
    <br>
    <% if current_user %>
      <li><%= link_to "Your Profile", critic_path(current_user) %></li>
      <li><%= link_to "All Movies", movies_path %></li>
      <li><%= link_to "Log Out", signout_path %></li>
    <% else %>
      <li><%= link_to "Sign Up", new_critic_path %></li>
      <li><%= link_to "Log In", login_path %></li>
    <% end %>
  </body>
</html>
