<%= form_for @actor do |f| %>
  <%= f.label "First Name:" %>
  <%= f.text_field :first_name %><br>
  <%= f.label "Last Name:" %>
  <%= f.text_field :last_name %><br>
  <%= f.label "Bio:" %>
  <%= f.text_area :bio %><br>
  <%= f.label "Please select Movies:" %><br>
  <%= f.collection_check_boxes :movie_ids, Movie.all, :id, :title %><br><br>
  <%= f.submit "Add Actor" %>
<% end %>
